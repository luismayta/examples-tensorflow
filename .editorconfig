root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

# Tab indentation (no size specified)
[*.{el,md,coffee,pp,yml,js}]
indent_style = space
indent_size = 2

# Tabs in less
[*.less]
indent_style = tab
indent_size = 2

[*.css]
indent_style = tab
indent_size = 2

[*.{py,sh}]
indent_style = space
indent_size = 4

[Makefile]
indent_size  = 4
indent_style = tab

[*.html]
indent_style = tab
indent_size = 2
